# =============================================================================
# KINSHIP LANDING - HOSTINGER PRODUCTION .htaccess
# Performance-optimized Apache configuration for static Next.js export
# Updated: 2026-01-27 - Added all 301 redirects and canonical handling
# =============================================================================

# ------------------------------------------------------------------------------
# | HTTPS & WWW Redirect (FIRST - Most Important)                              |
# ------------------------------------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Force WWW (non-www to www)
    RewriteCond %{HTTP_HOST} ^kinshiplanding\.com$ [NC]
    RewriteRule ^(.*)$ https://www.kinshiplanding.com/$1 [L,R=301]

    # Remove trailing slashes (for clean URLs)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]
</IfModule>

# ------------------------------------------------------------------------------
# | CANONICAL HANDLING - Strip tracking parameters from URLs                   |
# | Handles ?wwpath= (TheKnot referrals) and ?gclid= (Google Ads tracking)     |
# ------------------------------------------------------------------------------

<IfModule mod_rewrite.c>
    # Strip ?wwpath= parameter (TheKnot referrals) - redirect to clean canonical
    RewriteCond %{QUERY_STRING} ^wwpath= [NC]
    RewriteRule ^(.*)$ /$1? [R=301,L]

    # Strip ?gclid= parameter (Google Ads) - redirect to clean canonical
    RewriteCond %{QUERY_STRING} ^gclid= [NC]
    RewriteRule ^(.*)$ /$1? [R=301,L]

    # Strip any query string that starts with tracking params
    RewriteCond %{QUERY_STRING} ^(wwpath|gclid|utm_source|utm_medium|utm_campaign|fbclid)= [NC]
    RewriteRule ^(.*)$ /$1? [R=301,L]
</IfModule>

# ------------------------------------------------------------------------------
# | 301 REDIRECTS - Old URL Structure to New (SEO Critical)                    |
# | Converted from vercel.json - All permanent 301 redirects                   |
# ------------------------------------------------------------------------------

<IfModule mod_rewrite.c>
    # === ROOT LEVEL REDIRECTS ===
    RewriteRule ^home$ / [R=301,L]
    RewriteRule ^teamresources$ /about [R=301,L]
    RewriteRule ^cookie-policy$ /privacy [R=301,L]
    RewriteRule ^hotel-policies$ /policies [R=301,L]
    RewriteRule ^privacy-policy$ /privacy [R=301,L]
    RewriteRule ^newsletter-sign-up$ / [R=301,L]
    RewriteRule ^covid$ /policies [R=301,L]
    RewriteRule ^faq$ /about [R=301,L]
    RewriteRule ^contact$ /about [R=301,L]

    # === ABOUT SECTION REDIRECTS ===
    RewriteRule ^about/specials$ /offers [R=301,L]
