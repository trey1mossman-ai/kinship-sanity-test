    RewriteRule ^about-us/?$ /about [R=301,L]
    RewriteRule ^contact-us/?$ /about [R=301,L]
</IfModule>

# ------------------------------------------------------------------------------
# | Next.js Static Export Routing - FIXED FOR GOOGLE CRAWLING                |
# ------------------------------------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteEngine On

    # CRITICAL: Don't rewrite actual files and directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # CRITICAL: Explicitly allow important files for SEO/crawlers
    RewriteRule ^robots\.txt$ - [L]
    RewriteRule ^sitemap\.xml$ - [L]
    RewriteRule ^ai\.txt$ - [L]
    RewriteRule ^llms\.txt$ - [L]

    # Serve .html files without extension (Next.js clean URLs)
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.+)$ $1.html [L]

    # Handle root/index properly
    RewriteRule ^$ index.html [L]
</IfModule>

