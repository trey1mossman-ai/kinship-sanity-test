    RewriteRule ^explore/dogfriendlyitinerary/?$ /explore [R=301,L]
    RewriteRule ^explore/eatseedo/?$ /explore [R=301,L]
    RewriteRule ^explore/localinsight/?$ /explore [R=301,L]
